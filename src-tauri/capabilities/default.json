{
  "$schema": "https://schema.tauri.app/config/2.0",
  "identifier": "default",
  "description": "Default capabilities for Mermaid GUI v2.0",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "core:path:default",
    "core:event:default",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-open",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-ask",
    "dialog:allow-message",
    "dialog:allow-confirm",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:scope-temp",
    "fs:scope-home",
    "fs:scope-document",
    "fs:scope-desktop",
    "fs:scope-download"
  ]
}
