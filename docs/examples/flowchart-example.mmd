%% Example 1: Simple user login flow
%% Simulates a basic login validation process
flowchart TD
    %% User inputs credentials
    A[Start] --> B[Enter Username & Password]
    %% Server checks validity
    B --> C{Credentials Valid?}
    %% Successful login
    C -- Yes --> D[Redirect to Dashboard]
    %% Invalid credentials
    C -- No --> E[Show Error Message]
    %% End of successful flow
    D --> F[End]
    %% End of failed attempt
    E --> F

%% Example 2: Order Processing System
%% Models the flow of an e-commerce order
flowchart TD
    %% System checks stock
    A[Customer places order] --> B[Check inventory]
    %% Decision point
    B --> C{In stock?}
    %% Proceed if items are available
    C -- Yes --> D[Process Payment]
    %% Inform if out of stock
    C -- No --> E[Notify customer of delay]
    %% Fulfillment step
    D --> F[Ship Order]
    %% Delay path joins shipping stage
    E --> F
    %% Final state update
    F --> G[Update Order Status]
